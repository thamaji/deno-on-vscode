{
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "terminal.integrated.allowChords": false,
    "deno.enable": true,
    "deno.unstable": true,
    "deno.lint": true,
    "[typescript]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "denoland.vscode-deno",
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "denoland.vscode-deno",
        "editor.formatOnSave": true
    },
    "cSpell.ignorePaths": [
        "**/.git/objects/**",
        ".devcontainer/",
        ".vscode/",
        ".cache/deno/"
    ],
    "cSpell.words": [
        "deno"
    ]
}