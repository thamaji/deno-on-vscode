{
    "terminal.integrated.allowChords": false,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/.devcontainer/.extensions": true,
        "**/.devcontainer/.deno": true
    },
    "files.eol": "\n",
    "deno.enable": true,
    "deno.unstable": true,
    "deno.lint": true,
    "[typescript]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "denoland.vscode-deno",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "[typescriptreact]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 2,
        "editor.defaultFormatter": "denoland.vscode-deno",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        }
    },
    "cSpell.ignorePaths": [
        "**/.git/objects/**",
        "**/.devcontainer/**",
        "**/.vscode/**"
    ],
    "cSpell.words": [
        "deno"
    ]
}